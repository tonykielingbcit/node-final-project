
<section
    id="comment-form"
    class="comment-form"
>
    <div>
        <div id="profileId" style="display: none;">
            <%= profileId %>
        </div>
        <textarea 
            placeholder="Place your comment"
            class="comment-textarea"
            rows="5"
            id="comment-textarea"
        ></textarea>
    </div>

    <div class="comment-buttons-container">
        <div id="comment-message">
        </div>
        <button id="comment-after-submit-button" style="display: none;"></button>
    
        <div id="comment-buttons" class="comment-buttons">
            <button 
                id="comment-submit"
                title="Send out your comment"
            >
                Submit
            </button>
            <button 
                id="comment-cancel"
                title="Cancel comment"
            >
                Cancel
            </button>
            
        </div>
    </div>
</section>

<script type="text/javascript" src="/js/code-comments.js"></script>
