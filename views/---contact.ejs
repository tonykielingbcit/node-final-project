
<% let msg = ""; %>
<% if (typeof message !== "undefined") { %>
    <%   showMessage = "Thank you for your message!"; %>
<% } else {  %>
    <%   showMessage = ""; %>
<% } %>

<form 
    action="/contact"
    method="post"
>
    <section class="contact-page">
        <h2 class="contact-h2">Contact us</h2>
        <h2 id="message" class="contact-message"> <%= showMessage %> </h2>
        <textarea 
            id="txtArea" 
            name="txtArea" 
            rows="8"
            placeholder="Please, type your words."
            class="contact-textarea"
        ></textarea>
        
        <input 
            id="submitButton"
            type="submit"
            class="contact-button"
            title="Click to send your message"
            value="Send Message"
        >
    </section>
</form>